@model Website_ban_quan_ao.Models.Nguoidung

@{
    ViewBag.Title = "Xoá Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="delete-user-container">
    <h2 class="title">Xoá Vĩnh Viễn Người Dùng</h2>
    <hr />

    <div class="user-info">
        <h4>Thông tin người dùng</h4>
        <dl class="dl-horizontal">
            <div class="dl-item">
                <dt>@Html.DisplayNameFor(model => model.Hoten)</dt>
                <dd>@Html.DisplayFor(model => model.Hoten)</dd>
            </div>
            <div class="dl-item">
                <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                <dd>@Html.DisplayFor(model => model.Email)</dd>
            </div>
            <div class="dl-item">
                <dt>@Html.DisplayNameFor(model => model.Dienthoai)</dt>
                <dd>@Html.DisplayFor(model => model.Dienthoai)</dd>
            </div>
            <div class="dl-item">
                <dt>@Html.DisplayNameFor(model => model.Matkhau)</dt>
                <dd>@Html.DisplayFor(model => model.Matkhau)</dd>
            </div>
            <div class="dl-item">
                <dt>Phân quyền</dt>
                <dd>@ViewBag.Quyen.TenQuyen</dd>
            </div>
            <div class="dl-item">
                <dt>@Html.DisplayNameFor(model => model.Diachi)</dt>
                <dd>@Html.DisplayFor(model => model.Diachi)</dd>
            </div>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-danger" />
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

<!-- CSS -->
<style>
    .delete-user-container {
        padding: 30px;
        background-color: #f9f9f9;
        border: 1px solid #ddd; /* Đường viền cho khung chứa */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 20px auto;
    }

    .title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 28px;
        color: #333;
        font-weight: bold;
    }

    .user-info {
        margin-bottom: 20px;
    }

    .dl-horizontal {
        display: flex;
        flex-direction: column;
        gap: 10px; /* Khoảng cách giữa các mục */
    }

    .dl-item {
        display: flex;
        justify-content: space-between;
        padding: 10px; /* Khoảng cách bên trong */
        border-bottom: 1px solid #eee; /* Đường viền giữa các mục */
    }

        .dl-item dt {
            font-weight: bold;
            color: #555;
            flex: 1; /* Để dt chiếm khoảng trống cần thiết */
        }

        .dl-item dd {
            flex: 2; /* Để dd chiếm nhiều không gian hơn */
            margin-left: 10px; /* Khoảng cách giữa dt và dd */
        }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
        margin: 0 10px; /* Khoảng cách giữa các nút */
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
