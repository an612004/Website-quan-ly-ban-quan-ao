@{
    ViewBag.Title = "Quản lý Tin Tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý Tin Tức</h2>

<p>
    <a href="@Url.Action("Create", "TinTuc", new { area = "Admin" })" class="btn btn-primary">Thêm Tin Tức Mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu Đề</th>
            <th>Hình Ảnh</th>
            <th>Nội Dung</th>
            <th>Ngày Tạo</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TieuDe</td>
                <td>
                    <img src="@Url.Content("~/Hinhanh/" + item.Anhbia)" class="product-image" />
                </td>
                <td>
                    @if (item.NoiDung.Length > 100)
                    {
                        @item.NoiDung.Substring(0, 100)
                        @*<a href="@Url.Action("Details", "TinTuc", new { area = "Admin", id = item.Id })">Xem Chi Tiết</a>*@
                    }

                    else
                    {
                        @item.NoiDung
                    }
                </td>
                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.TrangThai)
                    {
                        <span class="badge badge-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Ẩn</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "TinTuc", new { area = "Admin", id = item.Id })" class="btn btn-sm btn-warning">Sửa</a>
                    <a href="@Url.Action("Delete", "TinTuc", new { area = "Admin", id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa tin tức này?');">Xóa</a>
                    <a href="@Url.Action("Details", "TinTuc", new { area = "Admin", id = item.Id })">Xem Chi Tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Đặt kích thước và căn chỉnh lại hình ảnh */
    .product-image {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    /* Căn chỉnh và thêm đường viền cho bảng */
    .table {
        width: 100%;
        margin-top: 15px;
        border: 1px solid #ccc;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        /* Thiết kế tiêu đề bảng */
        .table thead th {
            background-color: #f7f7f7;
            border-bottom: 2px solid #ddd;
            padding: 10px;
            text-align: center;
            font-weight: bold;
        }

        /* Căn chỉnh và thêm khoảng cách cho ô */
        .table td {
            padding: 8px;
            text-align: center;
            vertical-align: middle;
            border: 1px solid #eee;
        }

    /* Tùy chỉnh nút hành động */
    .btn {
        margin: 0 3px;
    }

    /* Tăng khoảng cách giữa các hàng */
    .table tbody tr {
        border-bottom: 1px solid #ddd;
    }

    /* Căn chỉnh toàn bộ khung chứa nội dung */
    .content-container {
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
    }
</style>
