@model Website_ban_quan_ao.Models.TinTuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tạo Bài Viết Mới</h2>

@using (Html.BeginForm("Create", "TinTuc", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.TieuDe)
        @Html.TextBoxFor(model => model.TieuDe, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NoiDung)
        @Html.TextAreaFor(model => model.NoiDung, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Anhbia, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" id="Anhbia" name="Anhbia" class="form-control" />
            @Html.ValidationMessageFor(model => model.Anhbia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TrangThai)
        @Html.CheckBoxFor(model => model.TrangThai)
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a href="@Url.Action("Index", "TinTuc", new { area = "Admin" })" class="btn btn-secondary">Hủy</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    /* Đưa khung chứa ra giữa màn hình và tăng thẩm mỹ */
    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Căn giữa tiêu đề và tăng cỡ chữ */
    .title {
        text-align: center;
        font-size: 1.8em;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: #555;
    }

    .form-control {
        padding: 10px;
        font-size: 1em;
    }

    .button-group {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        min-width: 100px;
        margin: 5px;
    }

    .text-danger {
        font-size: 0.9em;
        color: #d9534f;
    }
</style>