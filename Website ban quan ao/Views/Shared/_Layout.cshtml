    <style>
        /* Cố định thanh điều hướng ở đầu trang */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background-color: #dfeaeb;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Cung cấp khoảng cách cho phần nội dung dưới thanh điều hướng */
        body {
            padding-top: 100px; /* điều chỉnh kích thước thanh layout */
            background-color: #ecf0f1;
            font-family: 'Arial', sans-serif;
        }

        /* Thanh điều hướng */
        /* Điều chỉnh khoảng cách và kích thước chữ */
        .nav-link {
            color: #090a0a;
            padding: 15px 20px; /* Tăng padding */
            font-size: 16px; /* Tăng kích thước chữ */
            transition: color 0.3s ease, background-color 0.3s ease;
        }

        /* Canh giữa các mục */
        .navbar-nav {
            justify-content: space-between; /* Cân bằng các mục */
            align-items: center;
        }

        /* Điều chỉnh dropdown */
        .dropdown-menu {
            background-color: #34495e;
            font-size: 16px; /* Tăng kích thước chữ */
            border-radius: 4px; /* Tạo góc bo mềm */
        }

        /* Tăng sự tương phản và hiệu ứng hover */
        .nav-link:hover {
            background-color: #1abc9c;
            color: white;
            transition: all 0.3s ease-in-out; /* Hiệu ứng hover mượt hơn */
        }

        .dropdown-item {
            color: #ecf0f1;
            padding: 10px 20px;
        }

            .dropdown-item:hover {
                background-color: #1abc9c;
            }

        /* Căn chỉnh icon */
        .navbar-icons .nav-link {
            font-size: 20px;
            color: Black;
            margin-left: 15px;
        }

        /* Căn chỉnh số lượng giỏ hàng */
        .cart-icon {
            position: relative;
        }

            .cart-icon .item-count {
                position: absolute;
                top: -10px;
                right: -10px;
                background-color: red;
                color: white;
                border-radius: 50%;
                width: 20px;
                height: 20px;
                text-align: center;
                line-height: 20px;
                font-size: 20px;
                margin-left: 20px;
            }

        /* Hiển thị dropdown khi di chuột */
        .navbar-nav .dropdown:hover .dropdown-menu {
            display: block;
        }

        /* Hiệu ứng và style nổi bật cho AnAn Shop */
        .navbar-brand {
            font-size: 32px; /* Tăng kích thước chữ */
            color: #ed093b; /* Màu  nổi bật */
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px; /* Khoảng cách giữa các chữ cái */
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Đổ bóng chữ */
            transition: color 0.3s ease, transform 0.3s ease; /* Thêm hiệu ứng khi di chuột */
        }

            .navbar-brand:hover {
                color: #e67e22; /* Đổi màu khi hover */
                transform: scale(1.1); /* Phóng to khi hover */
            }
    </style>
