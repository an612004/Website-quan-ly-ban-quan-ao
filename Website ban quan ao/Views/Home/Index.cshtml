            text-align: center;
        }

        .policies-item {
            width: 23%;
        }

        .policies-image img {
            margin-bottom: 10px;
        }

        .policies-title {
            font-weight: bold;
        }

        .policies-desc {
            font-size: 14px;
        }

        /* Style cho phần sản phẩm */
        .collection_slidershow {
            display: flex;
            justify-content: space-between;
        }

        .ss_item {
            width: 23%;
            text-align: center;
        }

        .ss_img img {
            width: 100%;
            border-radius: 10px;
            object-fit: cover;
        }

        /* Style cho phần slideshow */
        .slideshow-container {
            max-width: 1200px;
            position: relative;
            margin: 0 auto;
            overflow: hidden;
        }

        .slideshow-wrapper {
            display: flex;
            width: 300%;
            transition: transform 1s ease;
        }

        .slide {
            flex: 1 0 100%;
            box-sizing: border-box;
        }

            .slide img {
                width: 35%;
                height: 400px;
                object-fit: cover;
                border-radius: 10px;
            }

        /* Style cho popup quảng cáo */
        .popup {
            display: none; /* Ban đầu ẩn popup */
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 900px; /* Điều chỉnh kích thước theo ý bạn */
            background-color: white;
            border: 2px solid #000;
            box-shadow: 0px 0px 15px rgba(0,0,0,0.5);
            z-index: 1000;
            padding: 10px;
            text-align: center;
            border-radius: 8px;
        }

            .popup img {
                width: 100%;
                height: auto;
                border-radius: 5px;
            }

        #close-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
            color: #333;
        }

            #close-btn:hover {
                color: red;
            }
    </style>
</head>
<body>

    <!-- Phần slideshow -->
    <div class="slideshow-container">
        <div class="slideshow-wrapper">
            <div class="slide">
                <img src="https://file.hstatic.net/1000360022/file/banner_web-_ra_mat__desk__81501a2b5021478b8d47a9b3fe8d69cc.jpg" alt="Male Model Fashion">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/dung-luong-banner-thoi-trang.jpg" alt="Marvel 1">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/ảnh chuyển 12.png" alt="Shirts Dress Fashion">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/ảnh chuyển 13.jpeg" alt="Shirts Dress Fashion">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/ảnh chuyển 14.jpg" alt="Shirts Dress Fashion">
            </div>
            <div class="slide">
                <img src="~/Hinhanh/ảnh chuyển 15.png" alt="Shirts Dress Fashion">
            </div>
        </div>
    </div>

    <!-- Popup Quảng Cáo -->
    <div id="ad-popup" class="popup">
        <img src="~/Hinhanh/quảng cáo 2.jpg" alt="Tưng Bừng Khai Trương">
        <button id="close-btn">&times;</button>
    </div>

    <script>
        // Hiển thị popup sau 3 giây khi vào trang
        document.addEventListener('DOMContentLoaded', function () {
            setTimeout(function () {
                document.getElementById('ad-popup').style.display = 'block';
            }, 2000);

            // Đóng popup khi nhấn nút "×"
            document.getElementById('close-btn').addEventListener('click', function () {
                document.getElementById('ad-popup').style.display = 'none';
            });
        });

        // Slideshow script
        let currentIndex = 0;
        const slides = document.querySelectorAll('.slide');
        const slideshowWrapper = document.querySelector('.slideshow-wrapper');
        const interval = 3000; // Thay đổi ảnh mỗi 3 giây

        function showNextSlide() {
            currentIndex = (currentIndex + 1) % slides.length;
            slideshowWrapper.style.transform = `translateX(-${100 * currentIndex}%)`;
        }

        setInterval(showNextSlide, interval);
    </script>

</body>
</html>


