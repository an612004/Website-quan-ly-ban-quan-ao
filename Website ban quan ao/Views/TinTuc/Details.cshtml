@using Website_ban_quan_ao.Models
@model TinTuc

@{
    ViewBag.Title = "Chi Tiết Tin Tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="news-details-container">
    <div class="news-image">
        <img src="@Url.Content("~/Hinhanh/" + Model.Anhbia)" alt="@Model.TieuDe" class="img-fluid rounded" />
    </div>
    <div class="news-content mt-4">
        <h1 class="news-title">@Model.TieuDe</h1>
        <p class="news-date"><small class="text-muted">Ngày Đăng: @Model.NgayTao.ToString("dd/MM/yyyy")</small></p>
        <div class="news-body mt-3">
            @Html.Raw(Model.NoiDung)
        </div>
    </div>
    <div class="back-button mt-4">
        <a href="@Url.Action("Index", "TinTuc")" class="btn btn-secondary">Quay Lại Danh Sách Tin Tức</a>
    </div>
</div>

<style>
    /* Container tổng thể */
    .news-details-container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background-color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    /* Phần hình ảnh */
    .news-image img {
        width: 100%;
        max-height: 450px;
        object-fit: cover;
        border-radius: 8px;
    }

    /* Tiêu đề tin tức */
    .news-title {
        font-size: 2em;
        font-weight: bold;
        color: #333;
        margin-top: 15px;
    }

    /* Ngày đăng */
    .news-date {
        font-size: 0.9em;
        color: #888;
        margin-bottom: 20px;
    }

    /* Nội dung chi tiết */
    .news-body {
        font-size: 1.1em;
        line-height: 1.6;
        color: #555;
        margin-bottom: 20px;
    }

    /* Nút quay lại */
    .back-button .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 20px;
        font-size: 0.9em;
        padding: 8px 20px;
        transition: background-color 0.2s;
    }

        .back-button .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
